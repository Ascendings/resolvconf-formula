# -*- coding: utf-8 -*-
# vim: ft=jinja

{## Start with  defaults from defaults.sls ##}
{% import_yaml 'resolvconf/defaults.yaml' as default_settings %}

{##
Setup variable using grains['os_family'] based logic, only add key:values here
that differ from whats in defaults.yaml
##}
{% set os_family_map = salt['grains.filter_by']({
	'Debian': {},
	'Suse': {},
	'Arch': {},
	'RedHat': {},
	'FreeBSD': {
      'file_group': 'wheel',
	},
  },
  grain="os_family",
  merge=salt['pillar.get']('resolvconf:lookup'))
%}

{## Merge the flavor_map to the default settings ##}
{% do default_settings.hosts.update(os_family_map) %}

{## Merge in hosts:lookup pillar ##}
{% set resolvconf_settings = salt['pillar.get'](
        'resolvconf',
        default=default_settings.hosts,
        merge=True
    )
%}