{%- from "resolvconf/map.jinja" import resolvconf_settings with context %}
#
# Dynamic resolv.conf(5) file for glibc resolver(3)
#
# This file is managed by Salt! Do not edit by hand!
#
{% if resolvconf_settings.search_paths %}
search {% for searchpath in resolvconf_settings.search_paths %}{{ searchpath }} {% endfor %}
{%- endif %}
{% for nameserver in resolvconf_settings.nameservers %}
nameserver {{ nameserver }}
{%- endfor %}
{% if resolvconf_settings.search_options %}
options {{ resolvconf_settings.search_options|sort|join(' ') }}
{%- endif %}